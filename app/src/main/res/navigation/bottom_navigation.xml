<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bott_navigation"
    app:startDestination="@id/popularMovies2">

    <fragment
        android:id="@+id/popularMovies2"
        android:name="com.example.recyclerview.PopularMovies"
        android:label="fragment_popular_movies"
        tools:layout="@layout/fragment_popular_movies" >
        <action
            android:id="@+id/action_popularMovies2_to_topRated"
            app:destination="@id/topRated" />
    </fragment>
    <fragment
        android:id="@+id/topRated"
        android:name="com.example.recyclerview.topRated"
        android:label="fragment_top_rated"
        tools:layout="@layout/fragment_top_rated" >
        <action
            android:id="@+id/action_topRated_to_favorites2"
            app:destination="@id/favorites2" />
    </fragment>
    <fragment
        android:id="@+id/favorites2"
        android:name="com.example.recyclerview.favorites2"
        android:label="fragment_favorites2"
        tools:layout="@layout/fragment_favorites2" />
</navigation>